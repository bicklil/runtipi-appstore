{
    "schemaVersion": 2,
    "$schema": "https://schemas.runtipi.io/v2/dynamic-compose.json",
    "services": [
        {
            "name": "backend",
            "image": "localhost:42420/planning-backend:latest",
            "volumes": [
                {
                    "hostPath": "./data",
                    "containerPath": "/data"
                }
            ],
            "environment": [
                {
                    "key": "FLASK_ENV",
                    "value": "development"
                },
                {
                    "key": "DATABASE_URL",
                    "value": "sqlite:////data/planning.db"
                }
            ],
            "addToMainNetwork": true
        },
        {
            "name": "frontend",
            "isMain": true,
            "image": "localhost:42420/planning-frontend:latest",
            "internalPort": 80,
            "addPorts": [
                {
                    "containerPort": 80,
                    "hostPort": 9999
                }
            ],
            "dependsOn": [
                "backend"
            ],
            "addToMainNetwork": true
        }
    ]
}